<div class="section">
  <div class="container">
    <div class="row">
      <h1>Mis encuestas</h1>
    </div>
  </div>
</div>

<% for(var i=0; i<encuestas.length; i++) {%>
  <div class="section">
    <div class="container">
      <a href="/encuestas/detalle/<%= encuestas[i].id %>">
        <div class="row encuesta box effect1">
          <div class="col-sm-8 col-md-8">
            <h3>
              <strong><%= encuestas[i].titulo %></strong>
            </h3>
            <%= encuestas[i].descripcion %>
          </div>
          <div class="col-sm-4 col-md-4">
            <canvas id="myChart<%= encuestas[i].id %>" width="500" height="400"></canvas>
            <script>
              var ctx = document.getElementById("myChart<%= encuestas[i].id %>");
              var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                  labels: [
                    "Si", "No"
                  ],
                  datasets: [
                    {
                      label: '# Votos!!',
                      data: [
                        <%= encuestas[i].likes %>, <%= encuestas[i].dislikes %>
                      ],
                      backgroundColor: [
                        'rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)'
                      ],
                      borderColor: [
                        'rgba(255,99,132,1)', 'rgba(54, 162, 235, 1)'
                      ],
                      borderWidth: 1
                    }
                  ]
                },
                options: {
                  scales: {
                    yAxes: [
                      {
                        ticks: {
                          beginAtZero: true
                        }
                      }
                    ]
                  }
                }
              });
            </script>
          </div>
          <div>
            <div class="footer-card">
              <a href='/editarEncuesta?id=<%= encuestas[i].id%>'>
                <button class="btn btn-success" type="button" name="button">Modificar</button>
              </a>
              <a href='/eliminarEncuesta?id=<%= encuestas[i].id%>'>
                <button class="btn btn-success" type="button" name="button">Eliminar</button>
              </a>
              <br>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
<% }%>
